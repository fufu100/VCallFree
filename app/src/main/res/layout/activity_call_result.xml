<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="country"
            type="ufree.call.international.phone.wifi.vcallfree.api.Country" />
        <variable
            name="date"
            type="String" />
        <variable
            name="phone"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/colorPrimary"
            app:navigationIcon="@drawable/ic_dial_back_arrow"
            app:contentInsetStartWithNavigation="0dp"
            app:titleMarginStart="0dp"
            app:title="@string/call_result"
            app:titleTextColor="@color/text_normal" />

        <TextView
            android:id="@+id/phoneTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            android:layout_marginTop="38dp"
            android:textColor="@color/text_normal"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="@{phone}"
            tools:text="+1718 "/>

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phoneTv"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_dark"
            android:textSize="12sp"
            tools:text="+1718 "/>
        
        <View
            android:id="@+id/line"
            android:layout_width="1dp"
            android:layout_height="26dp"
            app:layout_constraintTop_toBottomOf="@id/username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:background="@color/text_dark"/>

        <TextView
            android:id="@+id/coin_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/line"
            app:layout_constraintBottom_toTopOf="@id/center"
            android:textColor="@color/text_yellow"
            android:textStyle="bold"
            android:textSize="16sp"
            tools:text="1718 "/>

        <TextView
            android:id="@+id/coin_cost_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/line"
            app:layout_constraintTop_toBottomOf="@id/center"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_dark"
            android:textSize="12sp"
            android:text="@string/coin_cost"/>

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/center"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:textSize="16sp"
            tools:text="1718 "/>

        <TextView
            android:id="@+id/duration_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/center"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_dark"
            android:textSize="12sp"
            android:text="@string/call_duration"/>

        <androidx.constraintlayout.widget.Constraints
            android:id="@+id/center"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toTopOf="@id/line"
            app:layout_constraintBottom_toBottomOf="@id/line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/line"/>

        <ImageView
            android:id="@+id/flag"
            android:layout_width="26dp"
            android:layout_height="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iso"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginTop="30dp"
            app:flag="@{country.iso}"/>
        <TextView
            android:id="@+id/iso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/flag"
            app:layout_constraintEnd_toStartOf="@id/time"
            app:layout_constraintTop_toTopOf="@id/flag"
            app:layout_constraintBottom_toBottomOf="@id/flag"
            android:layout_marginStart="8dp"
            android:textColor="@color/text_normal"
            android:textSize="16sp"
            android:text="@{country.iso}"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/iso"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/flag"
            app:layout_constraintBottom_toBottomOf="@id/flag"
            android:layout_marginStart="16dp"
            android:textColor="@color/text_normal"
            android:textSize="16sp"
            android:text="@{date}"/>

        <View
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="141dp"
            app:layout_constraintTop_toBottomOf="@id/flag"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="28dp"
            android:background="#141836"/>

        <TextView
            android:id="@+id/tip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/bg"
            app:layout_constraintEnd_toEndOf="@id/bg"
            app:layout_constraintTop_toTopOf="@id/bg"
            android:lineSpacingMultiplier="1.2"
            android:layout_marginStart="54dp"
            android:layout_marginEnd="54dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textColor="@color/text_normal"
            android:textSize="16sp"
            android:text="@string/tip_rate" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tip"
            style="@style/Widget.AppCompat.RatingBar"
            android:max="5"
            android:rating="5"
            android:progressDrawable="@drawable/rating_bar"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>