<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="activity"
            type="ufree.call.international.phone.wifi.vcallfree.ui.DialActivity" />
        <variable
            name="country"
            type="ufree.call.international.phone.wifi.vcallfree.api.Country" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/side_bg">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/colorPrimary"
            app:navigationIcon="@drawable/ic_avatar_title_bar"
            app:contentInsetStartWithNavigation="0dp"
            app:titleMarginStart="0dp"
            app:title="@string/app_name"
            app:titleTextColor="@color/text_normal" />

        <LinearLayout
            android:id="@+id/country_code"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            android:layout_marginStart="14dp"
            android:layout_marginTop="44dp"
            android:paddingEnd="14dp"
            android:paddingStart="8dp"
            android:gravity="center"
            android:background="@drawable/bg_blue_round"
            android:onClick="@{activity::selectCountry}">
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                app:flag_circle="@{country.iso}"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="@{`+` + country.code}"
                android:textColor="@color/text_normal"/>
        </LinearLayout>

        <TextView
            android:id="@+id/phoneTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/country_code"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/country_code"
            app:layout_constraintBottom_toBottomOf="@id/country_code"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            android:textColor="@color/text_normal"
            android:textSize="30sp"
            android:background="@null"
            tools:text="12134"
            android:cursorVisible="true" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/country_code"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="40dp"
            android:columnCount="3"
            android:useDefaultMargins="false">

            <TextView
                style="@style/DialNumber"
                android:layout_columnWeight="1"
                android:text="1"
                android:tag="1"
                android:onClick="@{activity::onClick}" />

            <TextView
                style="@style/DialNumber"
                android:layout_columnWeight="1"
                android:tag="2"
                android:text="2"
                android:onClick="@{activity::onClick}"/>

            <TextView
                style="@style/DialNumber"
                android:layout_columnWeight="1"
                android:tag="3"
                android:text="3"
                android:onClick="@{activity::onClick}"/>

            <TextView
                style="@style/DialLetter"
                android:layout_columnWeight="1"
                android:tag="1"
                android:text=""
                android:onClick="@{activity::onClick}"/>

            <TextView
                style="@style/DialLetter"
                android:layout_columnWeight="1"
                android:text="ABC"
                android:tag="2"
                android:onClick="@{activity::onClick}"/>

            <TextView
                style="@style/DialLetter"
                android:layout_columnWeight="1"
                android:text="DEF"
                android:tag="3"
                android:onClick="@{activity::onClick}"/>

            <TextView
                style="@style/DialNumber"
                android:layout_columnWeight="1"
                android:text="4"
                android:tag="4"
                android:onClick="@{activity::onClick}"/>

            <TextView
                style="@style/DialNumber"
                android:layout_columnWeight="1"
                android:text="5"
                android:tag="5"
                android:onClick="@{activity::onClick}"/>

            <TextView
                style="@style/DialNumber"
                android:layout_columnWeight="1"
                android:text="6"
                android:tag="6"
                android:onClick="@{activity::onClick}"/>

            <TextView
                style="@style/DialLetter"
                android:layout_columnWeight="1"
                android:text="GHI"
                android:tag="4"
                android:onClick="@{activity::onClick}"/>

            <TextView
                style="@style/DialLetter"
                android:layout_columnWeight="1"
                android:text="JKL"
                android:tag="5"
                android:onClick="@{activity::onClick}"/>

            <TextView
                style="@style/DialLetter"
                android:layout_columnWeight="1"
                android:text="MNO"
                android:tag="6"
                android:onClick="@{activity::onClick}"/>

            <TextView
                style="@style/DialNumber"
                android:layout_columnWeight="1"
                android:text="7"
                android:tag="7"
                android:onClick="@{activity::onClick}"/>

            <TextView
                style="@style/DialNumber"
                android:layout_columnWeight="1"
                android:text="8"
                android:tag="8"
                android:onClick="@{activity::onClick}"/>

            <TextView
                style="@style/DialNumber"
                android:layout_columnWeight="1"
                android:text="9"
                android:tag="9"
                android:onClick="@{activity::onClick}"/>

            <TextView
                style="@style/DialLetter"
                android:layout_columnWeight="1"
                android:text="PQRS"
                android:tag="7"
                android:onClick="@{activity::onClick}"/>

            <TextView
                style="@style/DialLetter"
                android:layout_columnWeight="1"
                android:text="TUV"
                android:tag="8"
                android:onClick="@{activity::onClick}"/>

            <TextView
                style="@style/DialLetter"
                android:layout_columnWeight="1"
                android:text="WXYZ"
                android:tag="9"
                android:onClick="@{activity::onClick}"/>

            <TextView
                style="@style/DialNumber"
                android:layout_columnWeight="1"
                android:text="" />

            <TextView
                style="@style/DialNumber"
                android:layout_columnWeight="1"
                android:text="0"
                android:tag="0"
                android:onClick="@{activity::onClick}"/>

            <TextView
                style="@style/DialNumber"
                android:layout_columnWeight="1"
                android:text="" />

            <TextView
                style="@style/DialLetter"
                android:layout_columnWeight="1"
                android:text="" />

            <TextView
                style="@style/DialLetter"
                android:layout_columnWeight="1"
                android:text="+"
                android:tag="0"
                android:onClick="@{activity::onClick}"/>

            <TextView
                style="@style/DialLetter"
                android:layout_columnWeight="1"
                android:text="" />

            <ImageView
                android:layout_gravity="fill_vertical"
                android:scaleType="center"
                android:layout_columnWeight="1"
                android:src="@drawable/ic_dial_back_arrow"
                android:onClick="@{activity::goBack}"/>

            <ImageView
                android:layout_columnWeight="1"
                android:layout_gravity="fill_vertical"
                android:scaleType="center"
                android:src="@drawable/ic_call"
                android:onClick="@{activity::call}"/>

            <ImageView
                android:id="@+id/del"
                android:layout_gravity="fill_vertical"
                android:scaleType="center"
                android:layout_columnWeight="1"
                android:src="@drawable/ic_dial_del"
                android:onClick="@{activity::del}"/>
        </GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>