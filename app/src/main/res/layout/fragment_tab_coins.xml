<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="fragment"
            type="ufree.call.international.phone.wifi.vcallfree.ui.CoinsFragment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        android:orientation="vertical">

        <ufree.call.international.phone.wifi.vcallfree.widget.WheelPanView
            android:id="@+id/panView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="14dp"
                android:paddingTop="15dp"
                android:paddingEnd="24dp"
                android:paddingBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_reward_video"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="Reward video"
                    android:textColor="@color/text_normal"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="108dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center_vertical|end"
                    android:background="@drawable/bg_green_btn"
                    android:drawableStart="@drawable/ic_coin3"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="+10~200"
                    android:textColor="@color/text_yellow2"
                    android:onClick="@{fragment::start}"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="14dp"
                android:paddingTop="15dp"
                android:paddingEnd="24dp"
                android:paddingBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_invite_friends"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="Invite Friends"
                    android:textColor="@color/text_normal"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="108dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center_vertical|end"
                    android:background="@drawable/bg_green_btn"
                    android:drawableStart="@drawable/ic_coin3"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="+10~200"
                    android:textColor="@color/text_yellow2" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="14dp"
                android:paddingTop="15dp"
                android:paddingEnd="24dp"
                android:paddingBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_check_in"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="Check in"
                    android:textColor="@color/text_normal"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="108dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center_vertical|end"
                    android:background="@drawable/bg_green_btn"
                    android:drawableStart="@drawable/ic_coin3"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="+10~200"
                    android:textColor="@color/text_yellow2" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="14dp"
                android:paddingTop="15dp"
                android:paddingEnd="24dp"
                android:paddingBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_set_phone_number"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="Set Phone number"
                    android:textColor="@color/text_normal"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="108dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center_vertical|end"
                    android:background="@drawable/bg_green_btn"
                    android:drawableStart="@drawable/ic_coin3"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="+10~200"
                    android:textColor="@color/text_yellow2"
                    android:onClick="@{fragment::setPhoneNumber}"/>
            </FrameLayout>
            s
        </LinearLayout>
    </LinearLayout>
</layout>