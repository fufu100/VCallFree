<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="fragment"
            type="ufree.call.international.phone.wifi.vcallfree.ui.CoinsFragment" />
        <variable
            name="totalCoins"
            type="String" />
    </data>

<!--    <FrameLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent">-->
    <ufree.call.international.phone.wifi.vcallfree.widget.CoinLayout
        android:id="@+id/coinLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="24dp">
            <ufree.call.international.phone.wifi.vcallfree.widget.WheelPanView
                android:id="@+id/panView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toTopOf="parent" />
            <ImageView
                android:id="@+id/goIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/panView"
                app:layout_constraintBottom_toBottomOf="@id/panView"
                app:layout_constraintStart_toStartOf="@id/panView"
                app:layout_constraintEnd_toEndOf="@id/panView"
                android:src="@drawable/ic_go"
                android:onClick="@{fragment::start}"/>

            <TextView
                android:id="@+id/total_coins_tv"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/panView"
                android:drawableStart="@drawable/ic_coin2"
                android:drawablePadding="6dp"
                android:layout_marginStart="32dp"
                android:text="@{totalCoins}"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="#FAF2D7"/>

            <TextView
                android:id="@+id/coin_cost"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/panView"
                android:drawableStart="@drawable/ic_coin2"
                android:drawablePadding="6dp"
                android:layout_marginEnd="32dp"
                android:text="100/100"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="#FAF2D7"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="14dp"
                android:paddingTop="15dp"
                android:paddingEnd="24dp"
                android:paddingBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_reward_video"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="Reward video"
                    android:textColor="@color/text_normal"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="108dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center_vertical|end"
                    android:background="@drawable/bg_green_btn"
                    android:drawableStart="@drawable/ic_coin3"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="+10~200"
                    android:textColor="@color/text_yellow2"
                    />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="14dp"
                android:paddingTop="15dp"
                android:paddingEnd="24dp"
                android:paddingBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_invite_friends"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="Invite Friends"
                    android:textColor="@color/text_normal"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="108dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center_vertical|end"
                    android:background="@drawable/bg_green_btn"
                    android:drawableStart="@drawable/ic_coin3"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="+10~200"
                    android:textColor="@color/text_yellow2"
                    android:onClick="@{fragment::inviteFriends}"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="14dp"
                android:paddingTop="15dp"
                android:paddingEnd="24dp"
                android:paddingBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_check_in"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="Check in"
                    android:textColor="@color/text_normal"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="108dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center_vertical|end"
                    android:background="@drawable/bg_green_btn"
                    android:drawableStart="@drawable/ic_coin3"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="+10~200"
                    android:textColor="@color/text_yellow2" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="14dp"
                android:paddingTop="15dp"
                android:paddingEnd="24dp"
                android:paddingBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_set_phone_number"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="Set Phone number"
                    android:textColor="@color/text_normal"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="108dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center_vertical|end"
                    android:background="@drawable/bg_green_btn"
                    android:drawableStart="@drawable/ic_coin3"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="+10~200"
                    android:textColor="@color/text_yellow2"
                    android:onClick="@{fragment::setPhoneNumber}"/>
            </FrameLayout>

        </LinearLayout>
    </ufree.call.international.phone.wifi.vcallfree.widget.CoinLayout>
<!--    </FrameLayout>-->
</layout>